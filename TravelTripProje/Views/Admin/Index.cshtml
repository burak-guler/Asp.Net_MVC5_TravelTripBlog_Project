@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="text-align:center;">ID</th>
            <th style="text-align:center;">BAŞLIK</th>
            <th style="text-align:center;">SİL</th>
            <th style="text-align:center;">GÜNCELLE</th>
            <th style="text-align:center;">DETAYLAR</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">@item.ID</td>
                <td style="text-align:center;">@item.Baslik</td>
                <td style="text-align:center;"><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></td>
                <td style="text-align:center;"><a href="/Admin/BlogGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td style="text-align:center;"><a href="/Blog/BlogDetay/@item.ID" class="btn btn-default">Detaylar</a></td>
            </tr>
        }

    </tbody>  
</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">YENİ BLOG</a>

